<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>



        <main>
            <% if (products.length > 0) { %>
                <div class="grid">
                    <ul>
                    <% for (let product of products) { %>
                        <li class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title">
                                    <%= product.productData.title %>
                                </h1>
                            </header>
                            <div class="card__image">
                                <img src="<%= product.productData.imageUrl %>" alt="<%= product.productData.title %>">
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">$
                                    <%= product.productData.price %>
                                </h2>
                                <h2 class="product__price">Quantity:
                                    <%= product.qty %>
                                </h2>
                                <p class="product__description">
                                    <%= product.productData.description %>
                                </p>
                            </div>
                            <div class="card__actions">
                                <a href="/products/<%= product.productData.id %>" class="btn">Details</a>

                                <form action="/cart-delete-item" method="POST">
                                    <button class="btn" type="submit">Delete</button>
                                    <input type="hidden" name="productId" value="<%= product.productData.id %>">
                                </form>

                            </div>
                        </li>
                        <% } %>
                    </ul>
                </div>
                
                <% } else { %>
                    <h1>No Products Found!</h1>
                    <% } %>
        </main>

        <%- include('../includes/end.ejs') %>




   